	gem 'sqlite3', '1.3.8'
	gem 'turn', '<0.8.3'
	gem 'rspec-rails'
	gem 'guard-rspec'
	gem 'capybara'
	gem 'launchy'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: true
end

